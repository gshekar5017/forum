.comment.clearfix
  .comment
    .content
      %p.comment_content= comment.comment
      %p.comment_author= comment.user
    .buttons
      %p= link_to 'Edit', edit_post_comment_path(comment.post,comment)
      %p= link_to 'Delete ', [comment.post,comment], method: :delete, data: {confirm: 'Are You sure'}